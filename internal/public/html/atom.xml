{{ safeHTML `<?xml version="1.0" encoding="utf-8"?>` }}
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="es-ES">
	<id>{{ .BaseURL }}/</id>
	<title>Publicaciones - Vigo360</title>
	<subtitle>Ãšltimas publicaciones en el sitio web de Vigo360</subtitle>
	<updated>{{ .LastUpdate }}</updated>
	<generator uri="{{ .GeneratorURI }}">Vigo360</generator>
	<link rel="self" href="{{ .BaseURL }}/atom.xml" />
	<icon>/includes/logo.png</icon>
	
	{{- $domain := .BaseURL }}
	{{- range .Entries }}
	<entry>
		<id>{{ $domain }}/post/{{ .Id }}</id>
		<title>{{ .Titulo }}</title>
		<published>{{ date3339 .Fecha_publicacion }}</published>
		<updated>{{ date3339 .Fecha_actualizacion }}</updated>
		<link rel="alternate" href="{{ $domain }}/post/{{ .Id }}" />
		<summary>{{ .Resumen }}</summary>
		<author>
			<name>{{ .Autor.Nombre }}</name>
			<email>{{ .Autor.Email }}</email>
			<uri>{{ $domain }}/autores/{{ .Autor.Id }}</uri>
		</author>
		{{- range .Tags }}
		<category term="{{ .Nombre }}" />
		{{- end}}
	</entry>
	{{- end}}
</feed>
